@startuml
class Камера
class Снимок
class Система
class Генератор
class Пользователь
class Память
Система <-- Пользователь : отправляет запрос
Камера o-- Снимок : создаёт
Камера <|-- Система : управляет
Генератор <|-- Система : управляет
Память <|-- Система : управляет
Снимок *-- Память : записывает\nхранит
@enduml
